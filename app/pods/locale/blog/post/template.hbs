<div class = "route-blogPost">

  {{link-to
    '‚Üê To blog index' 'locale.blog'
    class = "route-blogPost-back"
  }}

  {{blog-post
    class   = "route-blogPost-post"
    post    = model.post
  }}

  {{#unless fastboot.isFastBoot}}
    {{disqus-comments
      class      = "route-blogPost-comments"
      identifier = model.post.disqusId
      title      = model.post.title
    }}
  {{/unless}}

</div>{{! route-blogPost }}